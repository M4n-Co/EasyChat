<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Typography -->

    <style name="h6">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>
    
    <style name="sub1" parent="h6">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sub2" parent="sub1">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="body1" parent="sub1">
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="body2" parent="sub2">
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="btn_typography" parent="sub2">
        <item name="android:letterSpacing">1.25</item>
    </style>

</resources>